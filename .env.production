# Production Environment Variables for WSA Chat Tool with MongoDB Atlas
# Replace these with your actual production values

# MongoDB Atlas Configuration (Production)
REACT_APP_MONGODB_URI=mongodb+srv://prod-username:prod-password@prod-cluster.mongodb.net/wsa-chat-prod?retryWrites=true&w=majority

# Firebase Authentication (Keep for Google/Microsoft login)
REACT_APP_FIREBASE_API_KEY=your_production_firebase_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-production-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-production-project-id

# OpenAI Configuration
REACT_APP_OPENAI_API_KEY=your_production_openai_api_key

# SharePoint Integration (Production)
REACT_APP_SHAREPOINT_ACCESS_TOKEN=your_production_sharepoint_token
REACT_APP_SHAREPOINT_TENANT_ID=your_production_tenant_id
REACT_APP_SHAREPOINT_CLIENT_ID=your_production_client_id

# EmailJS Configuration (Optional - for automated emails)
REACT_APP_EMAILJS_SERVICE_ID=your_production_service_id
REACT_APP_EMAILJS_TEMPLATE_ID=your_production_template_id
REACT_APP_EMAILJS_PUBLIC_KEY=your_production_public_key

# Web3Forms Configuration (Backup email service)
REACT_APP_WEB3FORMS_ACCESS_KEY=your_production_web3forms_key

# Domain Configuration
REACT_APP_DOMAIN=yourdomain.com
REACT_APP_BASE_URL=https://yourdomain.com

# Environment
REACT_APP_ENV=production
REACT_APP_ENVIRONMENT=production
REACT_APP_DEBUG=false
